<div class="container mt-3">

  <div class="row">
    <div class="col-12">
      <h1>All our Flats (<%= @flats.count %>)</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @query %>
        <p>You searched for <strong><%= @query %></strong>. We found <%= @flats.count %> flats out of our <%= Flat.count %> on our website.</p>
      <% else %>
        <p>All <%= Flat.count %> flats.</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url(<%= flat.flat_image_url %>)"></div>
          <div class="flat-card-content">
            <h4><%= flat.name %></h4>
            <p><%= flat.address %></p>
            <div class="d-flex justify-content-between">
              <div>
                <i class="fas fa-users"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div>
                <span><%= flat.price_per_night %></span>
                <i class="fas fa-euro-sign"></i>
              </div>
            </div>
            <div class="flat-card-infos mt-3">
              <div class="d-flex justify-content-around">
                <%= link_to "More Info", flat_path(flat) %>
                <%= link_to "Edit", edit_flat_path(flat) %>
                <%= link_to "Remove", flat_path(flat), method: :delete %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>





